<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/opponentSprite"
        android:layout_width="376dp"
        android:layout_height="479dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/akuma1" />

    <Button
        android:id="@+id/codeAttack"
        android:layout_width="123dp"
        android:layout_height="70dp"
        android:layout_marginBottom="23dp"
        android:hapticFeedbackEnabled="false"
        android:text="Code"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="21dp" />

    <Button
        android:id="@+id/refactorAttack"
        android:layout_width="123dp"
        android:layout_height="70dp"
        android:layout_marginBottom="23dp"
        android:text="Refactor"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="146dp" />

    <Button
        android:id="@+id/debugAttack"
        android:layout_width="123dp"
        android:layout_height="70dp"
        android:layout_marginBottom="23dp"
        android:text="Debug"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="269dp" />

    <ImageView
        android:id="@+id/playerPip1"
        android:layout_width="60dp"
        android:layout_height="49dp"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/playerPip2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/GreenCheck"
        tools:layout_editor_absoluteY="547dp" />

    <ImageView
        android:id="@+id/playerPip2"
        android:layout_width="60dp"
        android:layout_height="49dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/tiebreakPip_enemy"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/playerPip1"
        app:layout_constraintTop_toTopOf="@+id/playerPip1"
        app:srcCompat="@drawable/GreenCheck" />

    <ImageView
        android:id="@+id/tiebreakPip_enemy"
        android:layout_width="60dp"
        android:layout_height="49dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/enemyPip2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/playerPip2"
        app:layout_constraintTop_toTopOf="@+id/playerPip2"
        app:srcCompat="@drawable/RedCross" />

    <ImageView
        android:id="@+id/tiebreakPip_player"
        android:layout_width="60dp"
        android:layout_height="49dp"
        android:visibility="invisible"
        app:srcCompat="@drawable/GreenCheck"
        tools:layout_editor_absoluteX="175dp"
        tools:layout_editor_absoluteY="547dp" />

    <ImageView
        android:id="@+id/enemyPip2"
        android:layout_width="60dp"
        android:layout_height="49dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/enemyPip1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tiebreakPip_enemy"
        app:layout_constraintTop_toTopOf="@+id/tiebreakPip_enemy"
        app:srcCompat="@drawable/RedCross" />

    <ImageView
        android:id="@+id/enemyPip1"
        android:layout_width="60dp"
        android:layout_height="49dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/enemyPip2"
        app:layout_constraintTop_toTopOf="@+id/enemyPip2"
        app:srcCompat="@drawable/RedCross" />

</androidx.constraintlayout.widget.ConstraintLayout>